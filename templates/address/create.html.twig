{% extends 'base.html.twig' %}

{% block title %}
    {% if edit %}
        Modifier l'adresse
    {% else %}
        Ajouter une adresse
    {% endif %}
{% endblock %}

{% block body %}
    {% if edit %}
        <h1 class="mt-5">Modifier l'adresse</h1>
    {% else %}
        <h1 class="mt-5">Ajouter une nouvelle adresse</h1>
    {% endif %}

    {{ form_start(addressForm) }}
    {{ form_row(addressForm.streetNumber) }}
    {{ form_row(addressForm.street) }}
    {{ form_row(addressForm.zipcode) }}
    {{ form_row(addressForm.city) }}
    {{ form_row(addressForm.country) }}
    {{ form_row(addressForm.phoneNumber) }}
    <button class="btn btn-success" type="submit">AJOUTER</button>
    {{ form_end(addressForm) }}
    <a href="{{ path('app_address') }}" class="mt-3 btn btn-primary">ANNULER</a>
{% endblock %}
