{% extends 'base.html.twig' %}

{% block title %}Vos adresses{% endblock %}

{% block body %}
    <h1 class="mt-5">Voici vos différentes adresses</h1>
    {% if app.user.profile.addresses is not empty %}
        {% for address in app.user.profile.addresses %}
            <div class="border boder-dark text-center p-3 mt-4 mb-3">
                <div>
                    <p>{{ address.streetNumber }} {{ address.street }}, {{ address.zipcode }} {{ address.city }}, {{ address.country }}</p>
                    <p>numéro de téléphone (+33){{ address.phoneNumber }}</p>
                </div>
                <div class="d-flex justify-content-center mt-3">
                    <a href="{{ path('app_address_edit', {id:address.id}) }}" class="btn btn-warning me-4">MODIFIER</a>
                    <a href="{{ path('app_address_delete', {id:address.id}) }}" class="btn btn-danger">SUPPRIMER</a>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <h3 class="mt-4 mb-4">Vous n'avez d'adresses enregistrées</h3>
    {% endif %}
    <a style="margin-right: auto;margin-left: auto;display: block" href="{{ path('app_address_create') }}" class="mt-4 btn btn-success">AJOUTER UNE NOUVELLE ADRESSE</a>
{% endblock %}
